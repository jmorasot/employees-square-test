<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margin_24">

    <ImageView
        android:contentDescription="@null"
        android:id="@+id/employeeItemImageView"
        android:layout_width="@dimen/employee_avatar_size"
        android:layout_height="@dimen/employee_avatar_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/employeeItemNameTextView"
        android:layout_width="@dimen/view_fit_constraints"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_8"
        android:textColor="@color/text"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/employeeItemImageView"
        app:layout_constraintStart_toEndOf="@id/employeeItemImageView"
        app:layout_constraintBottom_toTopOf="@+id/employeeItemTeamNameTextView"/>

    <TextView
        android:id="@+id/employeeItemTeamNameTextView"
        android:layout_width="@dimen/view_fit_constraints"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/employeeItemImageView"
        app:layout_constraintTop_toBottomOf="@id/employeeItemNameTextView"
        app:layout_constraintBottom_toBottomOf="@id/employeeItemImageView"/>

</androidx.constraintlayout.widget.ConstraintLayout>